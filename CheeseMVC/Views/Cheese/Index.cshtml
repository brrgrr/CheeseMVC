@{
    ViewData["Title"] = "My Cheese";
}

<h1>@ViewData["Title"]</h1>

@if (ViewBag.cheeses.Count == 0)
{
    <p>No cheese to display!</p>
    <p><a class="btn btn-default" asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>
}
else
{
    <dl class="dl-horizontal">
        @foreach (var cheese in ViewBag.cheeses)
        {
            <dt class="text-capitalize">
                @cheese.Key                
            </dt>
            <dd class="text-muted">
                @cheese.Value
                <a asp-controller="Cheese" asp-action="RemoveX" asp-route-cheeseName="@cheese.Key"><span class="glyphicon glyphicon-remove text-danger" aria-hidden="true"></span></a>
            </dd>
        }
    </dl>
}